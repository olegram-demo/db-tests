<?xml version="1.0"?>
<psalm errorLevel="2">
    <projectFiles>
        <directory name="." />
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </PropertyNotSetInConstructor>
        <RedundantPropertyInitializationCheck>
            <errorLevel type="suppress">
                <directory name="tests" />
            </errorLevel>
        </RedundantPropertyInitializationCheck>
    </issueHandlers>
</psalm>
